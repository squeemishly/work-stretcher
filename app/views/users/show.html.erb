<h1><%= current_user.username %>'s Profile</h1>

<h3>Favorites</h3>

  <% current_user.favorites.each do |favorite| %>
    <div class='user-favored-stretches'>
      <h4 class="favored-stretch"><%= link_to favorite.stretch.name, stretch_path(favorite.stretch) %></h4><br />
      <% if favorite.note %>
        <%= favorite.note.note %>
        <div>
          <%= link_to "Remove Note", user_favorite_note_path(current_user, favorite, favorite.note), method: "DELETE" %>
          <%= link_to "Edit Note", edit_user_favorite_note_path(current_user, favorite, favorite.note) %>
        </div>
      <% else %>
        <%= link_to "Add Notes", new_user_favorite_note_path(current_user, favorite) %>
      <% end %>
      <div>
        <%= link_to "Remove from Favorites", user_favorite_path(current_user, favorite), method: "DELETE" %>
      </div>
    </div>
  <% end %>
