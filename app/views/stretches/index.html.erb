<h1>All Suggested Stretches</h1>

<%= link_to "See Stretches by Body Area", body_areas_path %>

<% @stretches.each do |stretch| %>
  <h5><%= link_to stretch.name, stretch_path(stretch) %></h5>
  <ul>
    <li><%= stretch.description %></li>
  </ul>
  <% if current_user && current_user.role == 'admin' %>
    <p><%= link_to "Edit", edit_admin_stretch_path(stretch) %>
    <%= link_to "Delete", admin_stretch_path(stretch), method: "delete" %></p>
  <% end %>
<% end %>
