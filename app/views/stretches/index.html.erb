<h1>All Suggested Stretches</h1>

<%= link_to "See Stretches by Body Area", body_areas_path %>

<% @stretches.each do |stretch| %>
  <div class="stretches-index-stretches">
    <div class="stretch-index-names">
      <h4 class="stretch-name"><%= link_to stretch.name, stretch_path(stretch) %></h4>
      <%= stretch.description %>
    </div>
    <% if current_user %>
      <div class="btn-favorite">
        <%= link_to "Favorite", user_favorites_path(current_user, stretch_id: stretch), method: "POST" %>
        <%#= if stretch.favorites.where("username = #{current_user.username}") %>
          <%#= link_to "Remove from Favorites" user_favorite_path(current_user, stretch_id: stretch), method: "DELETE" %>
        <%# end %>
      </div>
    <% end %>
    <%= render partial: "admin_buttons", :locals => {:stretch => stretch} %>
  </div>
<% end %>
