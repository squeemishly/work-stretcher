<h1>All Suggested Stretches</h1>

<%= form_tag(body_area_path(:q), method: "get") do %>
  <%= label_tag(:stretch_search, "Find a stretch:") %>
  <%= text_field_tag(:stretch_search) %>
  <%= submit_tag("Go!") %>
<% end %>

<% @stretches.each do |stretch| %>
  <h5><%= link_to stretch.name, stretch_path(stretch) %></h5>
  <ul>
    <li><%= stretch.description %></li>
  </ul>
<% end %>
